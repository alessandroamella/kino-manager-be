generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum VerificationMethod {
  CIE
  MANUAL
}

model Member {
  id                   Int                 @id @default(autoincrement())
  firstName            String
  lastName             String
  email                String
  password             String
  codiceFiscale        String? // null if birthCountry is not 'IT'
  address              String
  phoneNumber          String
  birthDate            DateTime
  birthComune          String? // null if birthCountry is not 'IT'
  birthCountry         String // alpha-2 code
  verificationMethod   VerificationMethod? // null if not verified
  verificationDate     DateTime? // null if not verified
  documentNumber       String? // null if not verified
  documentType         String? // null if not verified
  documentExpiry       DateTime? // null if not verified
  membershipCard       MembershipCard?     @relation(fields: [membershipCardNumber], references: [number])
  membershipCardNumber Int?                @unique
  isAdmin              Boolean             @default(false)
  createdAt            DateTime            @default(now())
  updatedAt            DateTime            @updatedAt
}

model MembershipCard {
  number Int     @id
  member Member?
}
