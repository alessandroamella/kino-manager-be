generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum VerificationMethod {
  CIE
  MANUAL
}

model Member {
  id                 Int                 @id @default(autoincrement())
  firstName          String
  lastName           String
  email              String
  password           String
  codiceFiscale      String? // null if birthCountry is not 'IT'
  birthDate          DateTime
  birthProvince      String? // null if birthCountry is not 'IT'
  birthCountry       String // alpha-2 code
  verificationMethod VerificationMethod? // null if not verified
  verificationDate   DateTime? // null if not verified
  createdAt          DateTime            @default(now())
  updatedAt          DateTime            @updatedAt
}
